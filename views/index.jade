extends layout

block content
  .container
    h1= title
    form#formId.col-sm-12(accept-charset='UTF-8', action='/transactions', method='post')
        fieldset.form-group.col-sm-10
          label(for='cc-num')
            span Card Number
          input.form-control(type='text'
            placeholder='•••• •••• •••• ••••'
            autocompletetype='cc-number'
            required='required'
            name='cardNumber')
        fieldset.form-group.col-sm-6
          label(for='cc-exp')
            span Expires
          input.form-control(type='tel', name='expiration', placeholder='MM / YY', autocompletetype='cc-exp', required='required')
        fieldset.form-group.col-sm-4
          label(for='cvc')
            span CVC
          input.form-control(name='cvc', type='tel', placeholder='CVC', autocompletetype='cc-cvc', required='required')
        .row
          button.btn.btn-primary(type='submit') Make Payment
          a.btn.btn-secondaryk(href='/') Cancel
